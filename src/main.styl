body, html {
  margin: 0;
  padding: 0;
  background-color: #444;
}

.profile {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-flow: column;
}

img {
  border-radius: 100%;
  border: 5px;
  width: 300px;
  box-shadow: 0 0 20px black;
}

.h1 {
  font-family: sans-serif;
  color: white;
  font-size: 5em;
  text-shadow: 0 0 20px black;
  text-align: center;
}
